<div className="flex gap-4 justify-center items-center p-2">
        <Link href={'/'}>LOGO</Link>
        <div className="flex items-center justify-center px-3">
          <ModeToggle />
        </div>
      </div>

      <ul>
        {!isOpenMenu && (
          <Button
            variant={'ghost'}
            onClick={() => setIsOpenMenu(true)}
            className="md:hidden p-2 border-2 border-accent-foreground/20  hover:bg-accent rounded-md"
          >
            <Menu size={34} className="text-foreground" />
          </Button>
        )}
        <div
          className={clsx(
            'fixed inset-0 z-50 flex flex-col bg-accent-foreground/55 backdrop-blur-md justify-start items-center p-2 transition-all duration-500 ease-in-out md:static md:bg-transparent md:flex-row md:justify-end md:w-auto md:translate-x-0 md:opacity-100 md:visible md:pointer-events-auto',
            {
              'translate-x-0 opacity-100 visible pointer-events-auto':
                isOpenMenu,
              'translate-x-full opacity-0 invisible pointer-events-none':
                !isOpenMenu,
            },
          )}
        >
          {isOpenMenu && (
            <div className="md:hidden flex justify-end items-center h-20 w-full">
              <button
                onClick={() => setIsOpenMenu(false)}
                className=" p-2 border-2 border-accent-foreground/20 hover:bg-accent rounded-md mr-4"
              >
                <X size={24} className="text-foreground" />
              </button>
            </div>
          )}

          <div className="flex flex-col w-2/3 gap-2 md:flex-row md:justify-end md:w-fit">
            {links.map((link) => (
              <li key={link.href}>
                <Link
                  href={link.href}
                  onClick={() => setIsOpenMenu(false)}
                  className={clsx(
                    'flex items-center justify-center py-1 px-3 font-medium transition-all duration-200 ease-in-out rounded-xl border',
                    {
                      'bg-accent border-accent-foreground/20':
                        pathname === link.href,
                      'border-transparent': pathname !== link.href,
                    },
                  )}
                >
                  {link.title}
                </Link>
              </li>
            ))}
          </div>
        </div>
      </ul>